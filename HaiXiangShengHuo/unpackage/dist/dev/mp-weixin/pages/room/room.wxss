
.page {
	margin-top: 50rpx;
}
.topBar {
	padding: 10rpx 20rpx;
	position: relative;
}
.title {
	font-size: 44rpx;
	font-weight: bold;
}
.addIcon {
	width: 60rpx;
	height: 60rpx;
	background-image: url(https://s1.ax1x.com/2022/03/29/qyWTyR.png);
	background-position: center center;
	background-size: 60rpx 60rpx;
	background-repeat: no-repeat;

	position: absolute;
	right: 20rpx;
	top: 10rpx;
}
.floorBar {
	padding: 10rpx 20rpx;
	position: relative;
}
.floorItems {}
.floorItem {
	display: inline-block;
	font-size: 36rpx;
	margin-right: 20rpx;
	color: #808080;
}
.floorItemSelected {
	color: #34bdd0;
	text-decoration: underline;
}
.roomItem {
	height: 360rpx;
	/* background-image: url(https://s1.ax1x.com/2022/03/29/qyHuw9.png); */
	background-position: center center;
	background-repeat: no-repeat;
	background-size: 720rpx;
	position: relative;
	border-radius: 30rpx;
	margin-left: 26rpx;
	margin-right: 26rpx;
	margin-top: 30rpx;
}
.roomItemRightPanel {
	width: 220rpx;
	height: 360rpx;
	background-color: rgba(0, 0, 0, 0.6);
	border-top-right-radius: 30rpx;
	border-bottom-right-radius: 30rpx;
	position: absolute;
	right: 0;
	color: white;
	padding-left: 30rpx;
}
.roomName {
	line-height: 100rpx;
	font-size: 36rpx;
}
.roomItems {
	line-height: 50rpx;
	font-size: 28rpx;
}
.gotoIcon {
	width: 60rpx;
	height: 60rpx;
	background-image: url(https://s1.ax1x.com/2022/03/29/qyvwDK.png);
	background-position: center center;
	background-size: 60rpx 60rpx;
	background-repeat: no-repeat;

	position: absolute;
	right: 10rpx;
	bottom: 20rpx;
}


